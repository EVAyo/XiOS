<?xml version = "1.0" encoding = "UTF-8"?>

<web-app>
    <!-- 基本配置 -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.lx.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/lg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reg</servlet-name>
        <servlet-class>com.lx.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reg</servlet-name>
        <url-pattern>/reg</url-pattern>
        <url-pattern>/r</url-pattern>
    </servlet-mapping>
</web-app>
